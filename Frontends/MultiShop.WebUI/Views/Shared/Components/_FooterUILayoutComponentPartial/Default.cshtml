<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", async function () {
        const bubble = document.getElementById("liveChatBubble");
        const chatWindow = document.getElementById("liveChatWindow");
        const closeBtn = document.getElementById("chatClose");
        const sendBtn = document.getElementById("sendMessage");
        const input = document.getElementById("userMessage");
        const chatBody = document.getElementById("chatMessages");
        const unreadBadge = document.getElementById("unreadBadge");
        const notifyAudio = document.getElementById("chatNotifyAudio");

        const themeClassic = document.getElementById("themeClassic");
        const themeBright  = document.getElementById("themeBright");
        const themeDeep    = document.getElementById("themeDeep");

        let unreadCount = 0;
        const currentUser = "@(User.Identity.IsAuthenticated? User.Identity.Name : "Kullanıcı")";
        let sessionId = "";

        /* Tema yönetimi */
        const CHAT_THEME_KEY = "ms_chat_theme";
        function applyTheme(theme) {
            document.body.classList.remove("chat-theme-classic", "chat-theme-bright", "chat-theme-deep");
            if (theme === "bright") {
                document.body.classList.add("chat-theme-bright");
            } else if (theme === "deep") {
                document.body.classList.add("chat-theme-deep");
            } else {
                document.body.classList.add("chat-theme-classic");
            }
            localStorage.setItem(CHAT_THEME_KEY, theme);
        }
        applyTheme(localStorage.getItem(CHAT_THEME_KEY) || "classic");
        themeClassic.addEventListener("click", () => applyTheme("classic"));
        themeBright .addEventListener("click", () => applyTheme("bright"));
        themeDeep   .addEventListener("click", () => applyTheme("deep"));

        /* SignalR */
        const connection = new signalR.HubConnectionBuilder()
            .withUrl(`http://localhost:7046/hubs/livechat?role=user&username=${encodeURIComponent(currentUser)}`)
            .withAutomaticReconnect()
            .build();

        connection.on("SetSessionId", id => {
            sessionId = id;
            console.log("SessionId:", id);
        });

        try {
            await connection.start();
            console.log("SignalR connected");
        } catch (err) {
            console.error("SignalR error:", err);
        }

        /* Mesaj gönderme */
        sendBtn.addEventListener("click", sendMessage);
        input.addEventListener("keypress", e => { if (e.key === "Enter") sendMessage(); });

        function sendMessage() {
            const msg = input.value.trim();
            if (!msg || !sessionId) return;
            appendMessage(msg, "user");
            connection.invoke("SendMessage", currentUser, msg, "user", sessionId);
            input.value = "";
        }

        /* Mesaj alma */
        connection.on("ReceiveMessage", (user, message, role) => {
            if (role === "user") return;

            appendMessage(`${user}: ${message}`, "admin");

            const isVisible = chatWindow.style.display === "flex";
            if (!isVisible) {
                unreadCount++;
                unreadBadge.textContent = unreadCount > 99 ? "99+" : unreadCount;
                unreadBadge.style.display = "flex";
                unreadBadge.classList.add("show");

                bubble.classList.add("pulse");
                setTimeout(() => bubble.classList.remove("pulse"), 1400);
            }

            const header = document.getElementById("chatHeader");
            header.classList.add("glow");
            setTimeout(() => header.classList.remove("glow"), 1400);

            try {
                notifyAudio.currentTime = 0;
                notifyAudio.play();
            } catch (e) {}

            if (navigator.vibrate) { navigator.vibrate([60, 40, 60]); }
        });

        /* Mesaj oluşturma */
        function appendMessage(text, sender) {
            const div = document.createElement("div");
            div.classList.add("message", sender);
            div.textContent = text;
            chatBody.appendChild(div);
            chatBody.scrollTop = chatBody.scrollHeight;
        }

        /* Aç/Kapa */
        function openChat() {
            chatWindow.style.display = "flex";
            unreadCount = 0;
            unreadBadge.style.display = "none";
            unreadBadge.classList.remove("show");
            requestAnimationFrame(() => {
                chatWindow.classList.remove("show-anim");
                void chatWindow.offsetWidth;
                chatWindow.classList.add("show-anim");
            });
        }
        function closeChat() {
            chatWindow.style.display = "none";
        }
        function toggleChat() {
            const visible = chatWindow.style.display === "flex";
            if (visible) closeChat(); else openChat();
        }

        bubble.addEventListener("click", toggleChat);
            // Başlık kısmına tıklayınca da pencereyi kapat / aç
    document.getElementById("chatHeader").addEventListener("click", function (e) {
        if (!e.target.classList.contains("theme-icon") && e.target.id !== "chatClose") {
            toggleChat();
        }
    });

        closeBtn.addEventListener("click", toggleChat);
    });
</script>
