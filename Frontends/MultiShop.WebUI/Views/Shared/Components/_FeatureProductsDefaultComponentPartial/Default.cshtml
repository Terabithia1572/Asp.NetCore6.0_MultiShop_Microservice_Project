@model List<ResultProductDTO>

<!-- ÖNE ÇIKAN ÜRÜNLER -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Öne Çıkan Ürünler</span>
    </h2>

    <div class="row px-xl-5">
        @foreach (var item in Model)
        {
            decimal x = ((item.ProductPrice / 100) * 15) + item.ProductPrice;

            // Dinamik rozet örneği
            bool isNew = item.ProductName.ToLower().Contains("yeni"); // örnek koşul
            bool isSale = item.ProductPrice < 600; // örnek koşul
            string badgeText = isNew ? "NEW" : isSale ? "SALE" : "%15";

            <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6 pb-3 d-flex">
                <div class="product-item bg-light">
                    <div class="product-img position-relative overflow-hidden">
                        <span class="product-badge">@badgeText</span>
                        <img src="@item.ProductImageURL" alt="@item.ProductName">
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href="/ShoppingCart/AddBasketItem/@item.ProductID">
                                <i class="fa fa-shopping-cart"></i>
                            </a>
                            <a class="btn btn-outline-dark btn-square" href="#"><i class="far fa-heart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href="#"><i class="fa fa-sync-alt"></i></a>
                            <a class="btn btn-outline-dark btn-square" href="/ProductList/ProductDetail/@item.ProductID"><i class="fa fa-search"></i></a>
                        </div>
                    </div>

                    <div class="text-center py-4 flex-grow-1 d-flex flex-column justify-content-between">
                        <a class="h6 text-decoration-none text-truncate" href="/ProductList/ProductDetail/@item.ProductID">@item.ProductName</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>@item.ProductPrice ₺</h5>
                            <h6 class="text-muted ml-2"><del>@x ₺</del></h6>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <small class="fa fa-star text-warning mr-1"></small>
                            <small class="fa fa-star text-warning mr-1"></small>
                            <small class="fa fa-star text-warning mr-1"></small>
                            <small class="fa fa-star text-warning mr-1"></small>
                            <small class="fa fa-star text-warning mr-1"></small>
                            <small>(@Model.Count)</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- TASARIM DÜZENLEME CSS -->
<style>
    /* === ÜRÜN KARTLARI === */
    .product-item {
        border: 1px solid #eee;
        border-radius: 6px;
        background-color: #fff;
        text-align: center;
        transition: all 0.3s ease-in-out;
        overflow: hidden;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
    }

        .product-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    /* === ROZET === */
    .product-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: #ff4242;
        color: #fff;
        font-size: 13px;
        font-weight: 600;
        padding: 5px 10px;
        border-radius: 4px;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        z-index: 2;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    }

        /* Farklı türler için renk */
        .product-badge.new {
            background-color: #28a745; /* yeşil */
        }

        .product-badge.sale {
            background-color: #007bff; /* mavi */
        }

    /* === GÖRSEL === */
    .product-item img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .product-item:hover img {
        transform: scale(1.05);
    }

    /* === AKSİYON BUTONLARI === */
    .product-action {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        opacity: 0;
        transition: all 0.4s ease;
        display: flex;
        gap: 5px;
    }

    .product-item:hover .product-action {
        opacity: 1;
        bottom: 15px;
    }

    .product-action .btn {
        width: 38px;
        height: 38px;
        line-height: 36px;
        border-radius: 50%;
        padding: 0;
    }

    /* === ÜRÜN BİLGİLERİ === */
    .product-item .text-center {
        padding: 15px 10px;
        flex-grow: 1;
    }

    .product-item h6 {
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 8px;
        color: #333;
    }

    .product-item .price {
        font-size: 18px;
        font-weight: 600;
        color: #222;
    }

        .product-item .price del {
            color: #888;
            font-size: 14px;
            margin-left: 6px;
        }

    /* === YILDIZLAR === */
    .fa-star {
        color: #f7c300 !important;
    }

    /* === GRID DÜZENİ (4'LÜ GÖRÜNÜM) === */
    .col-xl-3, .col-lg-3 {
        flex: 0 0 25%;
        max-width: 25%;
    }

    /* === RESPONSIVE === */
    @@media (max-width: 992px) {
        .col-md-4

    {
        flex: 0 0 33.3333%;
        max-width: 33.3333%;
    }

    .product-item img {
        height: 220px;
    }

    }

    @@media (max-width: 768px) {
        .col-sm-6

    {
        flex: 0 0 50%;
        max-width: 50%;
    }

    .product-item img {
        height: 200px;
    }

    }

    @@media (max-width: 576px) {
        .col-sm-6

    {
        flex: 0 0 100%;
        max-width: 100%;
    }

    .product-item img {
        height: 180px;
    }

    }
</style>
