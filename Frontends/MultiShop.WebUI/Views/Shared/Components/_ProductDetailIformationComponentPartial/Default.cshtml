@model UpdateProductDetailDTO

<div class="tab-pane fade" id="tab-pane-2">
    <div class="premium-info-box p-4 rounded-4 shadow-sm">
        <h4 class="info-title mb-3">
            <i class="fa fa-cube info-icon text-warning"></i>
            Ek Bilgiler
        </h4>
        <p class="info-text">@Model.ProductDetailInfo</p>
    </div>
</div>

<style>
    /* === KUTU === */
    .premium-info-box {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 16px;
        transition: all .3s ease;
        position: relative;
        overflow: hidden;
    }

        .premium-info-box::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #f2c200, #111);
            transition: all .6s ease;
        }

        .premium-info-box:hover::before {
            left: 0;
        }

    /* === BAŞLIK === */
    .info-title {
        font-weight: 700;
        color: #111;
        border-bottom: 2px solid #f2c200;
        display: flex;
        align-items: center;
        padding-bottom: 5px;
        gap: 8px; /* 🔸 ikon ve yazı arası boşluk */
    }

    .info-icon {
        font-size: 1.2rem;
        margin-right: 6px;
    }

    /* === METİN === */
    .info-text {
        color: #444;
        font-size: 1.05rem;
        line-height: 1.75;
        margin-top: 10px;
        text-align: justify;
        transition: all .3s ease;
    }

    .premium-info-box:hover .info-text {
        color: #222;
    }

    /* === IŞIK EFEKTİ === */
    .premium-info-box::after {
        content: "";
        position: absolute;
        bottom: 0;
        right: 0;
        width: 80px;
        height: 80px;
        background: radial-gradient(circle at bottom right, rgba(242, 194, 0, 0.15), transparent 70%);
        pointer-events: none;
    }

    /* === RESPONSIVE === */
    @@media (max-width: 768px) {
        .premium-info-box

    {
        padding: 1.2rem;
    }

    .info-title {
        font-size: 1.15rem;
    }

    .info-text {
        font-size: 0.98rem;
    }

    }
</style>
