@model List<ResultSpecialOfferDTO>
<div class="col-lg-4">
    @foreach (var item in Model)
    {
        <div class="product-offer mb-30" style="height: 200px;">
            <img class="img-fluid" src="@item.SpecialOfferImageUrl" alt="">
            <div class="offer-text">
                <h6 class="text-white text-uppercase">@item.SpecialOfferTitle</h6>
                <h3 class="text-white mb-3">@item.SpecialOfferSubTitle</h3>
                <a href="" class="btn btn-primary">Fırsatı Kaçırmayın</a>
            </div>
        </div>

    }
   
</div>