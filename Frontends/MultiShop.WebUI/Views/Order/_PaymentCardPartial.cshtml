@model MultiShop.DTOLayer.BasketDTOs.BasketTotalDTO

@if (Model == null || Model.BasketItems == null || !Model.BasketItems.Any())
{
    <div class="text-center py-5">
        <i class="fa fa-shopping-basket fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Sepetiniz boş görünüyor.</h5>
        <p class="small text-secondary">Ödeme adımına geçmeden önce ürün eklemelisiniz.</p>
    </div>
}
else
{
    <section class="payment-step fade-in">
        <div class="container-fluid px-xl-5">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h4 class="fw-bold text-dark m-0">
                    <i class="fa fa-credit-card text-deluxe me-2"></i> Ödeme Bilgileri
                </h4>
                <button id="btnBackToAddress" class="btn btn-link text-secondary">
                    <i class="fa fa-arrow-left me-1"></i> Adres Seçimine Dön
                </button>
            </div>

            <div class="row g-4">
                <div class="col-lg-7">
                    <div class="payment-card p-4">
                        <form id="paymentForm" method="post" action="/Order/CompleteOrder">
                            <div class="mb-3">
                                <label class="form-label">Kart Üzerindeki İsim</label>
                                <input type="text" name="CardName" class="form-control deluxe-input" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Kart Numarası</label>
                                <input type="text" name="CardNumber" maxlength="19" class="form-control deluxe-input" required placeholder="0000 0000 0000 0000" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Son Kullanma (AA/YY)</label>
                                    <input type="text" name="Expiration" maxlength="5" class="form-control deluxe-input" required placeholder="12/29" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">CVV</label>
                                    <input type="password" name="CVV" maxlength="3" class="form-control deluxe-input" required placeholder="000" />
                                </div>
                            </div>

                            <button type="submit" class="btn btn-deluxe-pay w-100 mt-3">
                                <i class="fa fa-lock me-1"></i> Ödemeyi Tamamla
                            </button>
                        </form>
                    </div>
                </div>

                <div class="col-lg-5">
                    <div class="summary-box p-4">
                        <h5 class="fw-bold mb-3 text-dark">Sipariş Özeti</h5>
                        <ul class="list-unstyled mb-3">
                            @foreach (var item in Model.BasketItems)
                            {
                                <li class="d-flex justify-content-between border-bottom py-2">
                                    <span>@item.ProductName × @item.ProductQuantity</span>
                                    <span>@(item.ProductPrice* item.ProductQuantity) ₺</span>
                                </li>
                            }
                        </ul>
                        <div class="d-flex justify-content-between align-items-center fw-bold fs-5">
                            <span>Toplam:</span>
                            <span>@Model.TotalPrice ₺</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<style>
    .payment-step {
        background: linear-gradient(180deg, #fffefc, #fffaf0);
        border-top: 2px solid #f5cf42;
        padding: 25px 0 40px;
    }

    .payment-card {
        background: #fff;
        border: 1px solid rgba(245, 207, 66, 0.25);
        border-radius: 20px;
        box-shadow: 0 6px 20px rgba(245, 207, 66, 0.12);
        transition: 0.3s;
    }

        .payment-card:hover {
            box-shadow: 0 10px 30px rgba(245, 207, 66, 0.25);
            transform: translateY(-2px);
        }

    .summary-box {
        background: linear-gradient(180deg, #fffefc, #fff9e6);
        border-radius: 18px;
        box-shadow: 0 5px 20px rgba(245, 207, 66, 0.15);
        border: 1px solid rgba(245, 207, 66, 0.3);
    }

    .btn-deluxe-pay {
        background: linear-gradient(90deg, #f5cf42, #ffe98a);
        color: #111;
        font-weight: 700;
        border: none;
        border-radius: 50px;
        padding: 14px 0;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        box-shadow: 0 6px 14px rgba(245, 207, 66, 0.3);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn-deluxe-pay::before {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.3);
            transform: skewX(-25deg);
            transition: all 0.6s ease;
        }

        .btn-deluxe-pay:hover::before {
            left: 130%;
        }

        .btn-deluxe-pay:hover {
            transform: scale(1.03);
            box-shadow: 0 10px 28px rgba(245, 207, 66, 0.35);
        }

    .deluxe-input {
        border: 1.5px solid #f5cf42;
        border-radius: 12px;
        box-shadow: 0 3px 8px rgba(245, 207, 66, 0.1);
    }

        .deluxe-input:focus {
            border-color: #e3b800;
            box-shadow: 0 0 10px rgba(245, 207, 66, 0.25);
        }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Kart numarasına otomatik boşluk formatı
        const cardInput = document.querySelector('input[name="CardNumber"]');
        if (cardInput) {
            cardInput.addEventListener('input', (e) => {
                let val = e.target.value.replace(/\D/g, '').substring(0, 16);
                e.target.value = val.replace(/(.{4})/g, '$1 ').trim();
            });
        }

        // Geri dönme
        document.getElementById('btnBackToAddress')?.addEventListener('click', () => {
            fetch('/Order/GetAddressSelectionPartial')
                .then(r => r.text())
                .then(html => {
                    document.querySelector('section.payment-step').outerHTML = html;
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
        });
    });
</script>
