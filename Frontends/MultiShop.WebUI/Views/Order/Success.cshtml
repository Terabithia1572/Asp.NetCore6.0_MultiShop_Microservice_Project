@{
    ViewData["Title"] = "Sipariş Başarılı";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
    var orderingId = TempData["OrderingId"];
    var orderingDate = TempData["OrderingDate"];
}

<section class="order-success-wrapper d-flex align-items-center justify-content-center">
    <div class="success-card text-center p-5 rounded shadow-lg">
        <div class="checkmark-container mb-4">
            <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" />
                <path class="checkmark-check" fill="none" d="M14 27l7 7 16-16" />
            </svg>
        </div>

        <h2 class="fw-bold mb-3 text-dark">Siparişiniz Başarıyla Tamamlandı 🎉</h2>
        <p class="text-muted mb-4">
            Teşekkür ederiz <strong>@User.Identity.Name</strong>!<br />
            Siparişiniz sistemimize kaydedildi. Detaylar e-posta adresinize gönderilecektir.
        </p>

        @if (orderingId != null)
        {
            <div class="order-info-box bg-light border-start border-4 border-warning rounded-3 py-3 px-4 mb-4 text-start">
                <p class="mb-1 fw-semibold text-dark">
                    <i class="fa fa-receipt me-2 text-warning"></i>
                    Sipariş Numarası: <span class="text-secondary">#@orderingId</span>
                </p>
                <p class="m-0 text-dark">
                    <i class="fa fa-calendar-alt me-2 text-warning"></i>
                    Tarih: <span class="text-secondary">@orderingDate</span>
                </p>
            </div>
        }

        <a href="/Default/Index" class="btn btn-continue py-2 px-4">
            <i class="fa fa-shopping-bag me-2"></i> Alışverişe Devam Et
        </a>
    </div>
</section>

<style>
    .order-success-wrapper {
        min-height: calc(100vh - 200px);
        background: linear-gradient(135deg, #2d2d2d, #3a3a3a);
        padding-top: 120px;
        padding-bottom: 80px;
    }

    .success-card {
        background: #fff;
        border: 2px solid #ffcc00;
        max-width: 600px;
        animation: fadeInUp 0.8s ease;
    }

    .order-info-box {
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .checkmark {
        width: 100px;
        height: 100px;
        stroke-width: 3;
        stroke: #28a745;
        stroke-miterlimit: 10;
        animation: scale .3s ease-in-out .9s both;
        display: block;
        margin: 0 auto;
    }

    .checkmark-circle {
        stroke-dasharray: 166;
        stroke-dashoffset: 166;
        stroke: #28a745;
        fill: none;
        animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
    }

    .checkmark-check {
        stroke-dasharray: 48;
        stroke-dashoffset: 48;
        animation: stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.6s forwards;
    }

    .btn-continue {
        background: #ffcc00;
        color: #000;
        border-radius: 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none !important;
    }

        .btn-continue:hover {
            background: #ffd633;
            transform: translateY(-2px);
            box-shadow: 0 6px 14px rgba(255, 204, 0, 0.4);
        }

    @@keyframes stroke {
        100% {
            stroke-dashoffset: 0;
        }
    }

    @@keyframes scale {
        50% {
            transform: scale3d(1.1, 1.1, 1);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
