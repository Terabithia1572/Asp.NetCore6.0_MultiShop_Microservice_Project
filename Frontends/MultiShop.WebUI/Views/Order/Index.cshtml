@model CreateOrderAddressDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<!-- Checkout Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <form method="post">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">SİPARİŞ TESLİMAT ve Fatura ADRESİNİZ</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Adınız</label>
                        <input class="form-control" asp-for="Name" type="text" placeholder="John">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Soyadınız</label>
                        <input class="form-control" asp-for="Surname" type="text" placeholder="Doe">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>E-mail Adresiniz</label>
                            <input class="form-control" asp-for="Email" type="text" placeholder="example@email.com">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Telefon Numaranız</label>
                            <input class="form-control" asp-for="PhoneNumber" type="text" placeholder="+90 0123 456 78 90">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Adres Satır 1</label>
                            <input class="form-control" asp-for="AddressDetail1" type="text" placeholder="123 Mahallesi">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Adres Satır 2</label>
                            <input class="form-control" asp-for="AddressDetail2" type="text" placeholder="1234 Sokak">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Ülke</label>
                            <input class="form-control" asp-for="Country" type="text" placeholder="Türkiye">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Şehir</label>
                            <input class="form-control" asp-for="AddressCity" type="text" placeholder="İstanbul">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>İlçe</label>
                            <input class="form-control" asp-for="AddressDistrict" type="text" placeholder="Büyük Ada">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Posta Kodu</label>
                        <input class="form-control" asp-for="AddressZipCode" type="text" placeholder="123">
                    </div>
                   
                </div>
            </div>

        </div>
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">SİPARİŞ ÖZETİ</span></h5>
            @await Component.InvokeAsync("_OrderSummaryComponentPartial")
                <div class="mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">ÖDEME YÖNTEMİ</span></h5>
                    <div class="bg-light p-30">
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="paypal">
                                <label class="custom-control-label" for="paypal">Paypal</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="directcheck">
                                <label class="custom-control-label" for="directcheck">Direct Check</label>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="banktransfer">
                                <label class="custom-control-label" for="banktransfer">Bank Transfer</label>
                            </div>
                        </div>
                        <button class="btn btn-block btn-primary font-weight-bold py-3">Ödeme Adımına Geç</button>
                    </div>
                </div>
              
        </div>
        </form>
    </div>
</div>
<!-- Checkout End -->

