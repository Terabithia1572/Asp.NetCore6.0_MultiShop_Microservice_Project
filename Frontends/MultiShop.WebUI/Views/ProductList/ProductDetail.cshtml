@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}


<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ProductDetailImageSliderComponentPartial", new { id = ViewBag.x })

        @* Bunu da doğru id ile çağırın. ViewBag.x set edilmediyse productID kullanın veya doğru ViewBag'i atayın *@
        @await Component.InvokeAsync("_ProductDetailFeatureComponentPartial", new { id = ViewBag.x })

    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Açıklama</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ek Bilgiler</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar (0)</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("_ProductDetailDescriptionComponentPartial",new {id=ViewBag.x}) <!-- Burada Biz Ürün Detay Açıklama kodlarını _ProductDetailDescriptionComponentPartial Tuttuk -->
                    @await Component.InvokeAsync("_ProductDetailIformationComponentPartial", new { id = ViewBag.x }) <!-- Burada Biz Ürün Detay Bilgi kodlarını _ProductDetailInformationComponentPartial Tuttuk -->
                    @* @await Component.InvokeAsync("_ProductDetailReviewComponentPartial", new { id = ViewBag.x }) <!-- Burada Biz Ürün Detay Yorum kodlarını _ProductDetailReviewComponentPartial Tuttuk --> *@


                    @* @await Html.PartialAsync("~/Views/ProductList/AddComment.cshtml", new { id = ViewBag.x }) <!-- Burada Biz Ürün Detay Yorum Ekleme kodlarını AddComment tuttuk --> *@
                </div>
            </div>
        </div>
    </div>
</div>
