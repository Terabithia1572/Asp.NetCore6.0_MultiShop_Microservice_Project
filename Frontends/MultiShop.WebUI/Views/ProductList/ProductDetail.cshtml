@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Ana Sayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürün Listesi</a>
                <span class="breadcrumb-item active">Ürün Detayları</span>
            </nav>
        </div>
    </div>
</div>
<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ProductDetailImageSliderComponentPartial", new { id = ViewBag.x }) <!-- Burada Biz Ürün Detay Resim kodlarını _ProductDetailImageSliderComponentPartial Tuttuk -->
        @await Component.InvokeAsync("_ProductDetailFeatureComponentPartial",new {id=ViewBag.x}) <!-- Burada Biz Ürün Detay Özellik kodlarını _ProductDetailFeatureComponentPartial Tuttuk -->
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Açıklama</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ek Bilgiler</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar (0)</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("_ProductDetailDescriptionComponentPartial") <!-- Burada Biz Ürün Detay Açıklama kodlarını _ProductDetailDescriptionComponentPartial Tuttuk -->
                    @await Component.InvokeAsync("_ProductDetailIformationComponentPartial") <!-- Burada Biz Ürün Detay Bilgi kodlarını _ProductDetailInformationComponentPartial Tuttuk -->
                    @await Component.InvokeAsync("_ProductDetailReviewComponentPartial") <!-- Burada Biz Ürün Detay Yorum kodlarını _ProductDetailReviewComponentPartial Tuttuk -->
                </div>
            </div>
        </div>
    </div>
</div>
