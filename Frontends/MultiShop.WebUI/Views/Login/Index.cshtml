@model CreateRegisterDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Giriş Formu - MultiShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" type="text/css" href="~/register/css/opensans-font.css">
    <link rel="stylesheet" type="text/css" href="~/register/fonts/line-awesome/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
    <link rel="stylesheet" href="~/register/css/style.css" />
</head>
<body class="form-v4">
    <div class="page-content">
        <div class="form-v4-content">
            <div class="form-left">
                <h2>BİLGİ</h2>
                <p class="text-1">Hesabınıza giriş yapmak için kullanıcı adınızı veya e-posta adresinizi ve şifrenizi giriniz.</p>
                <p class="text-2"><span>Yeni misiniz?</span> Hemen bir hesap oluşturabilirsiniz.</p>
                <div class="form-left-last">
                    <a href="~/Register/Index" class="account">Kayıt Ol</a>
                </div>
            </div>

            <!-- Login form -->
            <form asp-controller="Login" asp-action="Index" method="post" id="loginform" class="form-detail" novalidate>
                @Html.AntiForgeryToken()

                <h2>GİRİŞ FORMU</h2>

                <div class="form-row">
                    <label for="your_email">Kullanıcı Adı</label>
                    <input type="text" asp-for="Username" id="your_email" class="input-text" />
                </div>

                <div class="form-row">
                    <label for="password">Şifre</label>
                    <input type="password" asp-for="Password" id="password" class="input-text" />
                </div>

                <div class="form-checkbox">
                    <label class="container">
                        <p>Beni Hatırla</p>
                        <input type="checkbox"  />
                        <span class="checkmark"></span>
                    </label>
                </div>

                <div class="form-row-last">
                    <input type="submit" class="register" value="Giriş Yap" />
                </div>

                <!-- Hata mesajları -->
                <div>
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="text-danger">@err.ErrorMessage</div>
                    }
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/additional-methods.min.js"></script>
    <script>
        // jQuery validate ayarları
        $("#loginform").validate({
            rules: {
                EmailOrUsername: { required: true },
                Password: { required: true }
            },
            messages: {
                EmailOrUsername: { required: "Lütfen e-posta veya kullanıcı adı giriniz" },
                Password: { required: "Lütfen şifrenizi giriniz" }
            },
            errorPlacement: function (error, element) {
                error.insertAfter(element);
            }
        });
    </script>
</body>
</html>
