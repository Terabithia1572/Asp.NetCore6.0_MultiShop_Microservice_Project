<div class="col-lg-4">
    <form class="mb-30" asp-controller="Discount" asp-action="ConfirmDiscountCoupon" method="post">
        <div class="input-group">
            <input type="text" name="couponCode" class="form-control border-0 p-4" placeholder="Kupon Kodu">
            <div class="input-group-append">
                <button class="btn btn-primary">Kuponu Uygula</button>
                <br />
                <h1>Kod: @ViewBag.couponCode</h1>
            </div>
        </div>
    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">SİPARİŞ ÖZETİ</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-1">
                <h6>Toplam Ürün Fiyatı</h6>
                <h6>@ViewBag.total ₺</h6>
            </div>
            <div class="d-flex justify-content-between mb-1">
                <h6 class="font-weight-medium">KDV (%18)</h6>
                <h6 class="font-weight-medium">@ViewBag.tax ₺</h6>
            </div>
            <div class="d-flex justify-content-between mb-1">
                <h6 class="font-weight-medium">İndirim Oranı</h6>
                <h6 class="font-weight-medium">%@ViewBag.discountRate</h6>
            </div>
            <div class="d-flex justify-content-between mb-1">
                <h6 class="font-weight-medium">İndirimsiz Tutar</h6>
                <h6 class="font-weight-medium">@ViewBag.totalPriceWithTax ₺</h6>
            </div>
        </div>
        <div class="pt-2">
            <div class="d-flex justify-content-between mt-2">
                <h5>İndirimli Güncel Fiyat</h5>
                <h5> 25.00 ₺</h5>
            </div>
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme Adımına Geç</button>
        </div>
       
    </div>
</div>