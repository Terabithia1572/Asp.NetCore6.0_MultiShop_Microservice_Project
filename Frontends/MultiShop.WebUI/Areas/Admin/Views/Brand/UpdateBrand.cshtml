@model UpdateBrandDTO
@{
    ViewData["Title"] = "Marka Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="fade-in" style="max-width:850px;margin:auto;">
    <form asp-action="UpdateBrand" method="post" id="brandUpdateForm">
        <input type="hidden" asp-for="BrandID" />
        <div class="row g-4">
            <!-- Görsel Alanı -->
            <div class="col-md-5">
                <div id="dropZoneU" class="image-dropzone text-center p-4 rounded shadow-sm">
                    <input type="file" id="imageInputU" accept="image/*" hidden />
                    <img id="previewImageU"
                         src="@(string.IsNullOrEmpty(Model.BrandImageURL)
                                                      ? "https://dummyimage.com/400x200/efefef/aaa&text=Marka+Görseli"
                                                      : Model.BrandImageURL)"
                         class="img-fluid rounded mb-3"
                         style="object-fit:contain;height:220px;width:100%;">
                    <div class="text-muted small mb-2">Yeni görsel seç veya mevcutu koru</div>
                    <button type="button" id="selectImageBtnU" class="btn btn-sm btn-outline-warning fw-semibold">
                        <i class="fa-solid fa-upload me-1"></i> Görsel Değiştir
                    </button>
                    <input type="hidden" asp-for="BrandImageURL" id="BrandImageURLU" />
                </div>
            </div>

            <!-- Bilgi Alanı -->
            <div class="col-md-7">
                <div class="card border-0 shadow-sm p-4 rounded-3 bg-white">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Marka Adı</label>
                        <input asp-for="BrandName" class="form-control form-control-sm shadow-sm"
                               placeholder="Marka adını giriniz..." required />
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-warning text-dark fw-semibold shadow-sm px-4">
                            <i class="fa-solid fa-check me-1"></i> Güncelle
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // 🎨 Görsel seçme & sürükle bırak (base64)
        const dzU = document.getElementById("dropZoneU");
        const inU = document.getElementById("imageInputU");
        const prevU = document.getElementById("previewImageU");
        const hiddenU = document.getElementById("BrandImageURLU");

        document.getElementById("selectImageBtnU").addEventListener("click", () => inU.click());

        dzU.addEventListener("dragover", (e) => {
            e.preventDefault();
            dzU.classList.add("drag-over");
        });

        dzU.addEventListener("dragleave", () => dzU.classList.remove("drag-over"));
        dzU.addEventListener("drop", (e) => {
            e.preventDefault();
            dzU.classList.remove("drag-over");
            handleImgU(e.dataTransfer.files[0]);
        });

        inU.addEventListener("change", (e) => handleImgU(e.target.files[0]));

        function handleImgU(file) {
            if (file && file.type.startsWith("image/")) {
                const r = new FileReader();
                r.onload = (e) => {
                    prevU.src = e.target.result;
                    hiddenU.value = e.target.result;
                };
                r.readAsDataURL(file);
            }
        }

        // ✅ SweetAlert başarı bildirimi
        const form = document.getElementById("brandUpdateForm");
        form.addEventListener("submit", function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Marka başarıyla güncellendi!',
                icon: 'success',
                confirmButtonColor: '#ffc107',
                confirmButtonText: 'Tamam'
            }).then(() => {
                form.submit();
            });
        });
    </script>

    <style>
        .image-dropzone {
            border: 2px dashed #ddd;
            transition: all .3s ease;
            background: #fafafa;
        }

            .image-dropzone.drag-over {
                border-color: #ffc107;
                background: #fffbe6;
                transform: scale(1.02);
            }
    </style>
}
