@model List<ResultOfferDiscountDTO>
@{
    ViewData["Title"] = "İndirim Teklifleri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDashboardLayout.cshtml";
}

<!-- Üst Alan -->
<div class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-2">
    <div class="d-flex align-items-center gap-2">
        <h4 class="fw-semibold text-dark mb-0">
            <i class="fa-solid fa-tags text-warning me-2"></i>İndirim Teklifleri
        </h4>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-warning text-dark fw-semibold shadow-sm" data-bs-toggle="modal" data-bs-target="#addOfferModal">
            <i class="fa-solid fa-bolt me-1"></i> Hızlı Teklif Ekle
        </button>
        <a href="/Admin/OfferDiscount/CreateOfferDiscount" class="btn btn-outline-warning fw-semibold shadow-sm">
            <i class="fa-solid fa-plus me-1"></i> Tam Sayfada Ekle
        </a>
    </div>
</div>

<!-- Listeleme Alanı -->
<div id="offerGrid" class="offer-grid" style="display:grid;grid-template-columns:repeat(auto-fill,minmax(290px,1fr));gap:20px;">
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-light border text-center py-4">
            <i class="fa-regular fa-face-frown me-2 text-warning"></i>
            Henüz indirim teklifi eklenmemiş.
        </div>
    }
    else
    {
        foreach (var offer in Model)
        {
            <div class="offer-card" id="offer-@offer.OfferDiscountID">
                <div class="offer-image">
                    <img src="@offer.OfferDiscountImageUrl" alt="@offer.OfferDiscountTitle" class="img-fluid rounded-3 shadow-sm" />
                </div>
                <div class="p-3 text-center">
                    <h5 class="fw-bold text-dark">@offer.OfferDiscountTitle</h5>
                    <p class="text-muted small">@offer.OfferDiscountSubTitle</p>
                    <span class="badge bg-warning text-dark fw-semibold mb-2">
                        <i class="fa-solid fa-tag me-1"></i>@offer.OfferDiscountButtonTitle
                    </span>
                    <div class="mt-3 d-flex justify-content-center gap-2">
                        <a href="/Admin/OfferDiscount/UpdateOfferDiscount/@offer.OfferDiscountID" class="btn btn-sm btn-outline-warning fw-semibold px-3">
                            <i class="fa-solid fa-pen-to-square"></i> Güncelle
                        </a>
                        <button class="btn btn-sm btn-outline-danger fw-semibold px-3" onclick="confirmDelete('@offer.OfferDiscountID')">
                            <i class="fa-solid fa-trash"></i> Sil
                        </button>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- 🟨 Hızlı Teklif Ekle Modal (drag & drop + base64) -->
<div class="modal fade" id="addOfferModal" tabindex="-1" aria-labelledby="addOfferLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="modal-header bg-warning text-dark py-3 px-4 border-0">
                <h5 class="modal-title fw-semibold">
                    <i class="fa-solid fa-bolt me-2"></i>Hızlı İndirim Teklifi Ekle
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <form id="quickOfferForm" class="bg-light py-3 px-4">
                <div class="row g-3">
                    <!-- Sol: Görsel -->
                    <div class="col-md-5">
                        <div id="dropZoneQuick" class="image-dropzone text-center p-3 rounded shadow-sm">
                            <input type="file" id="imageInputQuick" accept="image/*" hidden />
                            <img id="previewImageQuick" src="https://dummyimage.com/600x400/efefef/aaa&text=Teklif+Görseli"
                                 class="img-fluid rounded mb-2" style="object-fit:cover; height:200px; width:100%;">
                            <div class="text-muted small mb-2">Dosyanı buraya sürükle veya seçmek için tıkla</div>
                            <button type="button" id="selectImageBtnQuick" class="btn btn-sm btn-outline-warning fw-semibold">
                                <i class="fa-solid fa-upload me-1"></i> Görsel Seç
                            </button>
                            <input type="hidden" id="OfferDiscountImageUrlQuick" />
                        </div>
                    </div>

                    <!-- Sağ: Alanlar -->
                    <div class="col-md-7">
                        <div class="card border-0 shadow-sm p-3 rounded-3 bg-white">
                            <div class="mb-2">
                                <label class="form-label fw-semibold">Teklif Başlığı</label>
                                <input type="text" id="OfferDiscountTitleQuick" class="form-control form-control-sm shadow-sm" placeholder="Başlık..." required />
                            </div>
                            <div class="mb-2">
                                <label class="form-label fw-semibold">Alt Başlık</label>
                                <input type="text" id="OfferDiscountSubTitleQuick" class="form-control form-control-sm shadow-sm" placeholder="Alt başlık..." required />
                            </div>
                            <div>
                                <label class="form-label fw-semibold">Buton Başlığı</label>
                                <input type="text" id="OfferDiscountButtonTitleQuick" class="form-control form-control-sm shadow-sm" placeholder="Örn: Hemen Al" required />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3 d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-light border shadow-sm px-3" data-bs-dismiss="modal">
                        <i class="fa-solid fa-xmark"></i> İptal
                    </button>
                    <button type="submit" class="btn btn-warning text-dark fw-semibold shadow-sm px-4">
                        <i class="fa-solid fa-check me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Silme
        function confirmDelete(id) {
            Swal.fire({
                title: "Emin misin?",
                text: "Bu indirim teklifi kalıcı olarak silinecek!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#dc3545",
                cancelButtonColor: "#6c757d",
                confirmButtonText: "Evet, sil!",
                cancelButtonText: "İptal"
            }).then(result => {
                if (result.isConfirmed) {
                    fetch(`/Admin/OfferDiscount/DeleteOfferDiscount/${id}`, { method: "GET" })
                        .then(r => {
                            if (r.ok) {
                                document.getElementById(`offer-${id}`)?.remove();
                                Swal.fire({ icon: "success", title: "Silindi!", showConfirmButton: false, timer: 1300 });
                            }
                        });
                }
            });
        }

        // Drag & Drop (Hızlı Ekle)
        const dropQuick = document.getElementById("dropZoneQuick");
        const inputQuick = document.getElementById("imageInputQuick");
        const previewQuick = document.getElementById("previewImageQuick");
        const hiddenUrlQuick = document.getElementById("OfferDiscountImageUrlQuick");
        document.getElementById("selectImageBtnQuick").addEventListener("click", () => inputQuick.click());
        dropQuick.addEventListener("dragover", e => { e.preventDefault(); dropQuick.classList.add("drag-over"); });
        dropQuick.addEventListener("dragleave", () => dropQuick.classList.remove("drag-over"));
        dropQuick.addEventListener("drop", e => { e.preventDefault(); dropQuick.classList.remove("drag-over"); handleQuick(e.dataTransfer.files[0]); });
        inputQuick.addEventListener("change", e => handleQuick(e.target.files[0]));
        function handleQuick(file) {
            if (file && file.type.startsWith("image/")) {
                const reader = new FileReader();
                reader.onload = (e) => { previewQuick.src = e.target.result; hiddenUrlQuick.value = e.target.result; };
                reader.readAsDataURL(file);
            }
        }

        // Hızlı Ekle – AJAX + DOM + localStorage "Yeni Eklendi"
        document.getElementById("quickOfferForm").addEventListener("submit", function (e) {
            e.preventDefault();
            const title = document.getElementById("OfferDiscountTitleQuick").value.trim();
            const sub   = document.getElementById("OfferDiscountSubTitleQuick").value.trim();
            const btn   = document.getElementById("OfferDiscountButtonTitleQuick").value.trim();
            const img   = document.getElementById("OfferDiscountImageUrlQuick").value.trim();

            if (!title || !sub || !btn || !img) {
                Swal.fire({ icon: "warning", title: "Eksik Bilgi", text: "Lütfen tüm alanları doldurun ve görsel seçin." });
                return;
            }

            const fd = new FormData();
            fd.append("OfferDiscountTitle", title);
            fd.append("OfferDiscountSubTitle", sub);
            fd.append("OfferDiscountButtonTitle", btn);
            fd.append("OfferDiscountImageUrl", img);

            fetch("/Admin/OfferDiscount/CreateOfferDiscountAjax", { method: "POST", body: fd })
            .then(r => r.json())
            .then(res => {
                if (res && res.offerDiscountID) {
                    const grid = document.getElementById("offerGrid");
                    const card = document.createElement("div");
                    card.className = "offer-card highlight-new";
                    card.id = `offer-${res.offerDiscountID}`;
                    card.innerHTML = `
                        <div class="offer-image">
                            <img src="${img}" alt="${title}" class="img-fluid rounded-3 shadow-sm" />
                        </div>
                        <div class="p-3 text-center">
                            <h5 class="fw-bold text-dark">${title}</h5>
                            <p class="text-muted small">${sub}</p>
                            <span class="badge bg-warning text-dark fw-semibold mb-2">
                                <i class="fa-solid fa-tag me-1"></i>${btn}
                            </span>
                            <div class="new-badge">✨ Yeni Eklendi</div>
                            <div class="mt-3 d-flex justify-content-center gap-2">
                                <a href="/Admin/OfferDiscount/UpdateOfferDiscount/${res.offerDiscountID}" class="btn btn-sm btn-outline-warning fw-semibold px-3">
                                    <i class="fa-solid fa-pen-to-square"></i> Güncelle
                                </a>
                                <button class="btn btn-sm btn-outline-danger fw-semibold px-3" onclick="confirmDelete('${res.offerDiscountID}')">
                                    <i class="fa-solid fa-trash"></i> Sil
                                </button>
                            </div>
                        </div>`;
                    grid.prepend(card);

                    // 3 gün localStorage
                    const now = Date.now(), expire = now + (3 * 24 * 60 * 60 * 1000);
                    const store = JSON.parse(localStorage.getItem("newOffers") || "{}");
                    store[res.offerDiscountID] = expire;
                    localStorage.setItem("newOffers", JSON.stringify(store));

                    Swal.fire({ icon: "success", title: "Eklendi!", text: "Teklif başarıyla eklendi.", showConfirmButton: false, timer: 1200 });
                    // reset & modal close
                    this.reset();
                    previewQuick.src = "https://dummyimage.com/600x400/efefef/aaa&text=Teklif+Görseli";
                    const modal = bootstrap.Modal.getInstance(document.getElementById("addOfferModal"));
                    modal.hide();
                } else {
                    Swal.fire({ icon: "error", title: "Hata", text: "Sunucudan geçerli yanıt alınamadı." });
                }
            });
        });

        // Redirect sonrası 3 gün “Yeni Eklendi”
        document.addEventListener("DOMContentLoaded", () => {
            const newId = '@TempData["NewOfferID"]';
            if (newId) {
                const now = Date.now(), expire = now + (3 * 24 * 60 * 60 * 1000);
                const store = JSON.parse(localStorage.getItem("newOffers") || "{}");
                store[newId] = expire;
                localStorage.setItem("newOffers", JSON.stringify(store));
            }
            const stored = JSON.parse(localStorage.getItem("newOffers") || "{}");
            const now2 = Date.now();
            for (const [id, exp] of Object.entries(stored)) {
                if (exp > now2) {
                    const card = document.getElementById(`offer-${id}`);
                    if (card) {
                        card.classList.add("highlight-new");
                        if (!card.querySelector(".new-badge")) {
                            const badge = document.createElement("div");
                            badge.className = "new-badge";
                            badge.innerHTML = "✨ Yeni Eklendi";
                            card.appendChild(badge);
                        }
                    }
                } else {
                    delete stored[id];
                }
            }
            localStorage.setItem("newOffers", JSON.stringify(stored));
        });
    </script>

    <style>
        .offer-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
            border: 1px solid rgba(255,193,7,0.3);
            overflow: hidden;
            transition: all .3s ease;
            position: relative;
        }

            .offer-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 10px 20px rgba(255,193,7,0.35);
            }

        .offer-image img {
            width: 100%;
            height: 170px;
            object-fit: cover;
        }

        /* Drag-drop alanı */
        .image-dropzone {
            border: 2px dashed #ddd;
            transition: all .3s ease;
            background: #fafafa;
        }

            .image-dropzone.drag-over {
                border-color: #ffc107;
                background: #fffbe6;
                transform: scale(1.02);
            }

        /* Yeni eklendi etiketi */
        .highlight-new {
            box-shadow: 0 0 18px rgba(255,215,0,0.8) !important;
        }

        .new-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: linear-gradient(90deg,#ffd700,#ffb703);
            color: #222;
            font-weight: 700;
            font-size: .8rem;
            padding: 4px 8px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            animation: twinkle 1.6s infinite;
        }
        @@keyframes twinkle {
            0%,100%

        {
            filter: brightness(1)
        }

        50% {
            filter: brightness(1.7)
        }

        }
    </style>
}
