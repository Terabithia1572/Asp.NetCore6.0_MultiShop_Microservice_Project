@model List<ResultOfferDiscountDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>İndirim Teklif Listesi</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                              
                                <th>İndirim Teklif Başlığı</th>
                                <th>İndirim Teklif Alt Başlığı</th>
                                <th>İndirim Teklif Buton Başlığı</th>
                                <th>İndirim Teklif Görseli</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                              
                                <tr>
                                   
                                    <td>@item.OfferDiscountTitle</td>
                                    <td>@item.OfferDiscountSubTitle</td>
                                    <td>@item.OfferDiscountButtonTitle</td>
                                    <td>@item.OfferDiscountImageUrl</td>
                                    <td><a href="/Admin/OfferDiscount/DeleteOfferDiscount/@item.OfferDiscountID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/OfferDiscount/UpdateOfferDiscount/@item.OfferDiscountID" class="btn btn-success">Güncelle</a></td>

                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Admin/OfferDiscount/CreateOfferDiscount/" class="btn btn-primary">Yeni İndirim Teklif Girişi</a>
                </div>
            </div>
        </div>

    </div>
</section>


