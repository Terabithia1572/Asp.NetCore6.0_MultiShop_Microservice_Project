@model CreateOfferDiscountDTO
@{
    ViewData["Title"] = "Yeni İndirim Teklifi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="fw-semibold mb-1">
            <i class="fa-solid fa-tags text-warning me-2"></i>Yeni İndirim Teklifi
        </h4>
        <div class="text-muted">Teklif detaylarını doldur, görseli ekle ve kaydet.</div>
    </div>
    <a href="/Admin/OfferDiscount/Index" class="btn btn-light border shadow-sm">
        <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
    </a>
</div>

<div class="fade-in" style="max-width: 900px; margin:auto;">
    <form asp-action="CreateOfferDiscount" method="post" id="offerForm">
        <div class="row g-4">
            <!-- Sol: Görsel -->
            <div class="col-md-5">
                <div id="dropZone" class="image-dropzone text-center p-4 rounded shadow-sm">
                    <input type="file" id="imageInput" accept="image/*" hidden />
                    <img id="previewImage" src="https://dummyimage.com/600x400/efefef/aaa&text=Teklif+Görseli"
                         class="img-fluid rounded mb-3" style="object-fit:cover; height:260px; width:100%;">
                    <div class="text-muted small mb-2">Dosyanı buraya sürükle veya seçmek için tıkla</div>
                    <button type="button" id="selectImageBtn" class="btn btn-sm btn-outline-warning fw-semibold">
                        <i class="fa-solid fa-upload me-1"></i> Görsel Seç
                    </button>
                    <input type="hidden" asp-for="OfferDiscountImageUrl" id="OfferDiscountImageUrl" />
                </div>
            </div>

            <!-- Sağ: Alanlar -->
            <div class="col-md-7">
                <div class="card border-0 shadow-sm p-4 rounded-3 bg-white">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Teklif Başlığı</label>
                        <input asp-for="OfferDiscountTitle" class="form-control form-control-sm shadow-sm" placeholder="Başlık..." required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Alt Başlık</label>
                        <input asp-for="OfferDiscountSubTitle" class="form-control form-control-sm shadow-sm" placeholder="Alt başlık..." required />
                    </div>
                    <div class="mb-1">
                        <label class="form-label fw-semibold">Buton Başlığı</label>
                        <input asp-for="OfferDiscountButtonTitle" class="form-control form-control-sm shadow-sm" placeholder="Örn: Hemen Al" required />
                    </div>

                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-warning text-dark fw-semibold shadow-sm px-4">
                            <i class="fa-solid fa-check me-1"></i> Kaydet
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Fade-in
        document.querySelector('.fade-in').style.opacity = 0;
        setTimeout(() => {
            document.querySelector('.fade-in').style.transition = 'opacity .6s ease';
            document.querySelector('.fade-in').style.opacity = 1;
        }, 150);

        // Drag & drop / Base64
        const dz = document.getElementById("dropZone");
        const inFile = document.getElementById("imageInput");
        const prev = document.getElementById("previewImage");
        const hiddenUrl = document.getElementById("OfferDiscountImageUrl");
        document.getElementById("selectImageBtn").addEventListener("click", () => inFile.click());
        dz.addEventListener("dragover", e => { e.preventDefault(); dz.classList.add("drag-over"); });
        dz.addEventListener("dragleave", () => dz.classList.remove("drag-over"));
        dz.addEventListener("drop", e => { e.preventDefault(); dz.classList.remove("drag-over"); handleImg(e.dataTransfer.files[0]); });
        inFile.addEventListener("change", e => handleImg(e.target.files[0]));
        function handleImg(file) {
            if (file && file.type.startsWith("image/")) {
                const r = new FileReader();
                r.onload = e => { prev.src = e.target.result; hiddenUrl.value = e.target.result; };
                r.readAsDataURL(file);
            }
        }

        // SweetAlert on submit
        const form = document.getElementById("offerForm");
        form.addEventListener("submit", function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Teklif başarıyla eklenecek',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#ffc107',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, kaydet'
            }).then(res => { if (res.isConfirmed) form.submit(); });
        });
    </script>

    <style>
        .image-dropzone {
            border: 2px dashed #ddd;
            transition: all .3s ease;
            background: #fafafa;
        }

            .image-dropzone.drag-over {
                border-color: #ffc107;
                background: #fffbe6;
                transform: scale(1.02);
            }
    </style>
}
