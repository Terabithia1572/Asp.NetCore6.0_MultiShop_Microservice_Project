@model UpdateOfferDiscountDTO
@{
    ViewData["Title"] = "İndirim Teklifi Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="fw-semibold mb-1">
            <i class="fa-solid fa-pen-to-square text-warning me-2"></i>İndirim Teklifi Güncelle
        </h4>
        <div class="text-muted">Görseli ve bilgileri düzenle.</div>
    </div>
    <a href="/Admin/OfferDiscount/Index" class="btn btn-light border shadow-sm">
        <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
    </a>
</div>

<div class="fade-in" style="max-width: 900px; margin:auto;">
    <form asp-action="UpdateOfferDiscount" method="post" id="offerUpdateForm">
        <input type="hidden" asp-for="OfferDiscountID" />
        <div class="row g-4">
            <!-- Sol: Görsel -->
            <div class="col-md-5">
                <div id="dropZoneU" class="image-dropzone text-center p-4 rounded shadow-sm">
                    <input type="file" id="imageInputU" accept="image/*" hidden />
                    <img id="previewImageU" src="@(string.IsNullOrEmpty(Model.OfferDiscountImageUrl) ? "https://dummyimage.com/600x400/efefef/aaa&text=Teklif+Görseli" : Model.OfferDiscountImageUrl)"
                         class="img-fluid rounded mb-3" style="object-fit:cover; height:260px; width:100%;">
                    <div class="text-muted small mb-2">Dosyanı buraya sürükle veya seçmek için tıkla</div>
                    <button type="button" id="selectImageBtnU" class="btn btn-sm btn-outline-warning fw-semibold">
                        <i class="fa-solid fa-upload me-1"></i> Görsel Seç
                    </button>
                    <input type="hidden" asp-for="OfferDiscountImageUrl" id="OfferDiscountImageUrlU" />
                </div>
            </div>

            <!-- Sağ: Alanlar -->
            <div class="col-md-7">
                <div class="card border-0 shadow-sm p-4 rounded-3 bg-white">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Teklif Başlığı</label>
                        <input asp-for="OfferDiscountTitle" class="form-control form-control-sm shadow-sm" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Alt Başlık</label>
                        <input asp-for="OfferDiscountSubTitle" class="form-control form-control-sm shadow-sm" required />
                    </div>
                    <div class="mb-1">
                        <label class="form-label fw-semibold">Buton Başlığı</label>
                        <input asp-for="OfferDiscountButtonTitle" class="form-control form-control-sm shadow-sm" required />
                    </div>

                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-warning text-dark fw-semibold shadow-sm px-4">
                            <i class="fa-solid fa-check me-1"></i> Güncelle
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Fade-in
        document.querySelector('.fade-in').style.opacity = 0;
        setTimeout(() => {
            document.querySelector('.fade-in').style.transition = 'opacity .6s ease';
            document.querySelector('.fade-in').style.opacity = 1;
        }, 150);

        // Drag & drop / Base64 (Update)
        const dzU = document.getElementById("dropZoneU");
        const inFileU = document.getElementById("imageInputU");
        const prevU = document.getElementById("previewImageU");
        const hiddenUrlU = document.getElementById("OfferDiscountImageUrlU");
        document.getElementById("selectImageBtnU").addEventListener("click", () => inFileU.click());
        dzU.addEventListener("dragover", e => { e.preventDefault(); dzU.classList.add("drag-over"); });
        dzU.addEventListener("dragleave", () => dzU.classList.remove("drag-over"));
        dzU.addEventListener("drop", e => { e.preventDefault(); dzU.classList.remove("drag-over"); handleImgU(e.dataTransfer.files[0]); });
        inFileU.addEventListener("change", e => handleImgU(e.target.files[0]));
        function handleImgU(file) {
            if (file && file.type.startsWith("image/")) {
                const r = new FileReader();
                r.onload = e => { prevU.src = e.target.result; hiddenUrlU.value = e.target.result; };
                r.readAsDataURL(file);
            }
        }

        // SweetAlert on submit
        const formU = document.getElementById("offerUpdateForm");
        formU.addEventListener("submit", function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Değişiklikler kaydedilecek',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#ffc107',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, kaydet'
            }).then(res => { if (res.isConfirmed) formU.submit(); });
        });
    </script>

    <style>
        .image-dropzone {
            border: 2px dashed #ddd;
            transition: all .3s ease;
            background: #fafafa;
        }

            .image-dropzone.drag-over {
                border-color: #ffc107;
                background: #fffbe6;
                transform: scale(1.02);
            }
    </style>
}
