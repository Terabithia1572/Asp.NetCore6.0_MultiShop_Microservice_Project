@model List<ResultProductDiscountDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h2 class="mb-3">İndirim Yönetimi</h2>
<a href="/Admin/ProductDiscount/AddProductDiscount" class="btn btn-success mb-3">+ Yeni İndirim Ekle</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>İndirim Oranı (%)</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Aktif Mi?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.DiscountRate</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>
                <td>
                    <a href="/Admin/ProductDiscount/UpdateProductDiscount/@item.ProductDiscountID" class="btn btn-sm btn-warning">Düzenle</a>
                    <a href="/Admin/ProductDiscount/DeleteProductDiscount/@item.ProductDiscountID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


