@model UpdateProductDiscountDTO
@{
    ViewData["Title"] = "Ürün İndirimi Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDashboardLayout.cshtml";
}
<div class="container bg-white p-4 rounded shadow-sm mt-4" style="max-width:700px;">
    <h4 class="fw-semibold mb-3 text-warning"><i class="fa-solid fa-pen-to-square me-2"></i>Ürün İndirimi Güncelle</h4>
    <form method="post">
        <input type="hidden" asp-for="ProductDiscountID" />
        <div class="mb-3">
            <label class="form-label fw-semibold text-secondary">Ürün Seç</label>
            <select class="form-select shadow-sm" asp-for="ProductID" required>
                <option value="">Bir ürün seçiniz</option>
                @foreach (var item in ViewBag.Products)
                {
                    if (item.ProductID == Model.ProductID)
                    {
                        <option value="@item.ProductID" selected>@item.ProductName</option>
                    }
                    else
                    {
                        <option value="@item.ProductID">@item.ProductName</option>
                    }
                }
            </select>
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-semibold text-secondary">İndirim Oranı (%)</label>
                <input type="number" class="form-control shadow-sm" asp-for="DiscountRate" required min="1" max="90" />
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold text-secondary">Aktif mi?</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                    <label class="form-check-label text-muted small">Yayında</label>
                </div>
            </div>
        </div>
        <div class="row g-3 mt-1">
            <div class="col-md-6">
                <label class="form-label fw-semibold text-secondary">Başlangıç Tarihi</label>
                <input type="date" class="form-control shadow-sm" asp-for="StartDate" required />
            </div>
            <div class="col-md-6">
                <label class="form-label fw-semibold text-secondary">Bitiş Tarihi</label>
                <input type="date" class="form-control shadow-sm" asp-for="EndDate" required />
            </div>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a href="/Admin/ProductDiscount/Index" class="btn btn-outline-secondary px-4">
                <i class="fa-solid fa-arrow-left"></i> Geri Dön
            </a>
            <button type="submit" class="btn btn-warning text-dark fw-semibold px-4 shadow-sm">
                <i class="fa-solid fa-check"></i> Güncelle
            </button>
        </div>
    </form>
</div>
