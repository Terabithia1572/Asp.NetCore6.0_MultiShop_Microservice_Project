@model MultiShop.DTOLayer.CatalogDTOs.ProductDiscountDTOs.UpdateProductDiscountDTO
@{
    ViewData["Title"] = "UpdateProductDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün İndirimi Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="ProductDiscountID" />

                        <label>Ürün Seç</label>
                        <select class="form-control" asp-for="ProductID">
                            <option value="">Bir ürün seçiniz</option>
                            @if (ViewBag.Products != null)
                            {
                                foreach (var item in ViewBag.Products)
                                {
                                    <option value="@item.ProductID" @@(item.ProductID == Model.ProductID ? "selected" : "")>
                                        @item.ProductName
                                    </option>
                                }
                            }
                        </select>

                        <br />
                        <label>İndirim Oranı (%)</label>
                        <input type="number" class="form-control" asp-for="DiscountRate" />

                        <br />
                        <label>Başlangıç Tarihi</label>
                        <input type="date" class="form-control" asp-for="StartDate" />

                        <br />
                        <label>Bitiş Tarihi</label>
                        <input type="date" class="form-control" asp-for="EndDate" />

                        <br />
                        <label>Aktif mi?</label>
                        <input type="checkbox" class="form-check-input" asp-for="IsActive" />

                        <br /><br />
                        <button type="submit" class="btn btn-success">İndirimi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
