@model CreateFeatureSliderDTO
@{
    ViewData["Title"] = "CreateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Slider Görseli Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Görsel Başlığı Adı</label>
                        <input type="text" class="form-control" asp-for="FeatureSliderTitle" />
                        <br />
                        <label>Görsel Açıklaması</label>
                        <input type="text" class="form-control" asp-for="FeatureSliderDescription" />
                        <br />
                        <label>Görsel Linki</label>
                        <input type="text" class="form-control" asp-for="FeatureSliderImageURL" />
                        <br />
                        <button type="submit" class="btn btn-primary">Slider Görseli Ekle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>


