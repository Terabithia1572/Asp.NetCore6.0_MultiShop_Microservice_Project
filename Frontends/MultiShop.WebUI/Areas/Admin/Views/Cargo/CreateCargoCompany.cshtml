@model MultiShop.DTOLayer.CargoDTOs.CargoCompanyDTOs.CreateCargoCompanyDTO
@{
    ViewData["Title"] = "Kargo Firması Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-8">
            <div class="card border-0 rounded-4 shadow-lg">
                <div class="card-header bg-warning bg-opacity-10 border-0 rounded-top-4 p-4">
                    <h4 class="m-0 fw-bold text-dark">
                        <i class="fa-solid fa-circle-plus text-warning me-2"></i> Yeni Kargo Firması
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateCargoCompany" asp-controller="Cargo" asp-area="Admin" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Firma Adı</label>
                            <input asp-for="CargoCompanyName" class="form-control form-control-lg" placeholder="Örn: Hızlı Kargo" required />
                            <span class="text-danger" asp-validation-for="CargoCompanyName"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <a href="/Admin/Cargo/CargoCompanyList" class="btn btn-outline-secondary px-4">
                                <i class="fa-solid fa-arrow-left-long me-1"></i> Geri
                            </a>
                            <button type="submit" class="btn btn-warning fw-semibold ms-auto px-4">
                                <i class="fa-solid fa-save me-1"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3 small text-muted">
                Premium MultiShop • Kargo Yönetimi
            </div>
        </div>
    </div>
</div>
