@model UpdateProductImageDTO
@{
    ViewData["Title"] = "ProductImageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Görseli Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="ProductImagesID" />
                        <input type="hidden" asp-for="ProductID" />
                        <label>Görsel 1</label>
                        <input type="text" class="form-control" asp-for="ProductImage1" />
                        <br />
                        <label>Görsel 2</label>
                        <input type="text" class="form-control" asp-for="ProductImage2" />
                        <br />
                        <label>Görsel 3</label>
                        <input type="text" class="form-control" asp-for="ProductImage3" />
                        <br />
                        <label>Görsel 4</label>
                        <input type="text" class="form-control" asp-for="ProductImage4" />
                        <br />
                        <button type="submit" class="btn btn-success">Ürün Görseli Güncelle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>


