@model List<MultiShop.DTOLayer.OrderDTOs.OrderDetailDTO.CreateOrderDetailDTO>
@{
    ViewData["Title"] = "Sipariş Detayları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDashboardLayout.cshtml";
}

<!-- 🔶 Başlık -->
<div class="d-flex flex-wrap align-items-center justify-content-between mb-4 gap-2">
    <div class="d-flex align-items-center gap-2">
        <h4 class="fw-semibold text-dark mb-0">
            <i class="fa-solid fa-box-open text-warning me-2"></i> Sipariş Detayları (#@ViewBag.OrderingID)
        </h4>
    </div>
    <a href="/Admin/Orders/Index" class="btn btn-outline-warning fw-semibold shadow-sm">
        <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
    </a>
</div>

<!-- 🧩 Ürün Kartları -->
@if (Model == null || !Model.Any())
{
    <div class="alert alert-light border text-center py-4">
        <i class="fa-regular fa-face-frown me-2 text-warning"></i>
        Bu siparişe ait ürün bulunamadı.
    </div>
}
else
{
    <div class="product-grid" style="display:grid;grid-template-columns:repeat(auto-fill,minmax(300px,1fr));gap:20px;">
        @foreach (var item in Model)
        {
            <div class="product-card">
                <div class="card-content text-center p-3">
                    <h5 class="fw-bold text-dark mb-1">
                        <i class="fa-solid fa-box me-1 text-warning"></i> @item.ProductName
                    </h5>
                    <p class="text-muted small mb-1">Adet: <b>@item.ProductQuantity</b></p>
                    <p class="text-muted small mb-1">Birim Fiyat: <b>@item.ProductPrice.ToString("C")</b></p>
                    <div class="fw-bold text-success fs-5 mt-2">
                        Toplam: @item.ProductTotalPrice.ToString("C")
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .product-card {
        background: #fff;
        border-radius: 14px;
        box-shadow: 0 3px 12px rgba(0,0,0,0.08);
        border: 1px solid rgba(255,193,7,0.25);
        transition: all .3s ease;
    }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(255,193,7,0.3);
        }
</style>
