@model CreateCategoryDTO
@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h4 class="fw-semibold mb-1">
            <i class="fa-solid fa-layer-group text-warning me-2"></i>Yeni Kategori Ekle
        </h4>
        <div class="text-muted">Kategori adını gir, görselini ekle ve kaydet.</div>
    </div>
    <a href="/Admin/Category/Index" class="btn btn-light border shadow-sm">
        <i class="fa-solid fa-arrow-left me-1"></i> Geri Dön
    </a>
</div>

<div class="create-category-container fade-in" style="max-width: 820px; margin:auto;">
    <form asp-action="CreateCategory" method="post" enctype="multipart/form-data" id="categoryForm">
        <div class="row g-4">
            <!-- SOL: Görsel Yükleme -->
            <div class="col-md-5">
                <div id="dropZone" class="image-dropzone text-center p-4 rounded shadow-sm">
                    <input type="file" id="imageInput" accept="image/*" hidden />
                    <img id="previewImage" src="https://dummyimage.com/400x400/efefef/aaa&text=Kategori+Gorseli"
                         class="img-fluid rounded mb-3" style="object-fit:cover; height:260px; width:100%;">
                    <div class="text-muted small mb-2">Dosyanı buraya sürükle veya seçmek için tıkla</div>
                    <button type="button" id="selectImageBtn" class="btn btn-sm btn-outline-warning fw-semibold">
                        <i class="fa-solid fa-upload me-1"></i> Görsel Seç
                    </button>
                    <input type="hidden" asp-for="CategoryImageURL" id="CategoryImageURL" />
                </div>
            </div>

            <!-- SAĞ: Form Alanları -->
            <div class="col-md-7">
                <div class="card border-0 shadow-sm p-4 rounded-3 bg-white">
                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label fw-semibold">Kategori Adı</label>
                        <input asp-for="CategoryName" class="form-control form-control-sm shadow-sm"
                               placeholder="Örn: Elektronik, Giyim..." required />
                    </div>

                    <div class="mb-2 small text-muted">
                        * Görsel seçtiğinde sol tarafta önizleme görüntülenir.
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-warning text-dark fw-semibold shadow-sm px-4 py-2">
                            <i class="fa-solid fa-check me-1"></i> Kaydet
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // ⚡ Fade-in
        (function () {
            const wrap = document.querySelector('.fade-in');
            wrap.style.opacity = 0;
            setTimeout(() => {
                wrap.style.transition = 'opacity .6s ease';
                wrap.style.opacity = 1;
            }, 120);
        })();

        // 🎨 Görsel seç / sürükle-bırak
        const dropZone = document.getElementById("dropZone");
        const imageInput = document.getElementById("imageInput");
        const previewImage = document.getElementById("previewImage");
        const CategoryImageURL = document.getElementById("CategoryImageURL");
        const selectImageBtn = document.getElementById("selectImageBtn");

        selectImageBtn.addEventListener("click", () => imageInput.click());
        dropZone.addEventListener("click", (e) => {
            if (e.target.id !== "selectImageBtn") imageInput.click();
        });

        dropZone.addEventListener("dragover", (e) => {
            e.preventDefault();
            dropZone.classList.add("drag-over");
        });
        dropZone.addEventListener("dragleave", () => dropZone.classList.remove("drag-over"));
        dropZone.addEventListener("drop", (e) => {
            e.preventDefault();
            dropZone.classList.remove("drag-over");
            const file = e.dataTransfer.files?.[0];
            handleImage(file);
        });
        imageInput.addEventListener("change", (e) => handleImage(e.target.files?.[0]));

        function handleImage(file) {
            if (!file || !file.type.startsWith("image/")) return;
            const reader = new FileReader();
            reader.onload = (e) => {
                previewImage.src = e.target.result;
                CategoryImageURL.value = e.target.result; // base64 saklıyoruz
            };
            reader.readAsDataURL(file);
        }

        // ✅ Submit + SweetAlert
        const form = document.getElementById("categoryForm");
        form.addEventListener("submit", function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Kategori eklensin mi?',
                text: 'Bilgileri kontrol ettin mi?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#ffc107',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Ekle',
                cancelButtonText: 'İptal'
            }).then((r) => {
                if (r.isConfirmed) {
                    // mini başarı
                    Swal.fire({
                        icon: 'success',
                        title: 'Eklendi!',
                        showConfirmButton: false,
                        timer: 900
                    });
                    setTimeout(() => form.submit(), 500);
                }
            });
        });
    </script>

    <style>
        /* --- Görsel yükleme alanı --- */
        .image-dropzone {
            border: 2px dashed #e6e6e6;
            transition: all .28s ease;
            background: #fafafa;
        }

            .image-dropzone.drag-over {
                border-color: #ffc107;
                background: #fffbe6;
                transform: translateY(-2px) scale(1.02);
                box-shadow: 0 10px 18px rgba(255,193,7,0.18);
            }

        .create-category-container input,
        .create-category-container select {
            border-radius: 10px;
        }

        .btn-warning:hover {
            background: #f4c10f;
            transform: translateY(-1px);
        }

        .card {
            transition: transform .28s ease, box-shadow .28s ease;
        }

            .card:hover {
                transform: translateY(-4px);
                box-shadow: 0 14px 26px rgba(0,0,0,.08);
            }
    </style>
}
