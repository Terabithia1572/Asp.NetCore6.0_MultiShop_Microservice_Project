
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MultiShop Admin — Final V3 (Supreme Edition)</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            --yellow: #ffc107;
            --dark: #212529;
            --light: #f7f8fb;
            --card: #fff;
            --border: #e9ecef;
            --muted: #6c757d;
        }

        * {
            box-sizing: border-box
        }

        body {
            margin: 0;
            font-family: Poppins,system-ui,-apple-system,Segoe UI,Roboto,sans-serif;
            background: linear-gradient(#fff,var(--light));
            color: var(--dark);
            overflow-x: hidden
        }

        /* SIDEBAR */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            width: 260px;
            background: #0f1113;
            color: #fff;
            display: flex;
            flex-direction: column;
            z-index: 100;
            height: 100vh;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: var(--yellow) #1e1e1e
        }

            .sidebar::-webkit-scrollbar {
                width: 7px
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: var(--yellow);
                border-radius: 8px
            }

            .sidebar::-webkit-scrollbar-track {
                background: #1e1e1e
            }

        .brand {
            padding: 18px 16px;
            border-bottom: 1px solid rgba(255,255,255,.08);
            display: flex;
            align-items: center;
            justify-content: space-between
        }

            .brand img {
                height: 28px;
                object-fit: contain;
                filter: brightness(1.08)
            }

        .admin-badge {
            background: var(--yellow);
            color: #000;
            font-size: 11px;
            padding: 4px 8px;
            border-radius: 20px;
            font-weight: 600;
            box-shadow: 0 0 6px rgba(255,193,7,.5)
        }

        .navwrap {
            flex: 1;
            padding: 10px 0
        }

        .sec-title {
            color: #a9b0b7;
            font-size: 11px;
            letter-spacing: .4px;
            text-transform: uppercase;
            padding: 10px 22px 4px
        }

        /* Menü + hover animasyonu */
        .nav a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 11px 22px;
            color: #d7dbe0;
            border-left: 3px solid transparent;
            transition: all .25s ease;
            white-space: nowrap;
            text-decoration: none !important;
            position: relative
        }

            .nav a i {
                width: 18px;
                color: var(--yellow) !important;
                text-align: center;
                transition: transform .25s ease
            }

            .nav a::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: 0;
                width: 0;
                height: 2px;
                background: var(--yellow);
                transition: width .3s ease
            }

            .nav a:hover {
                background: rgba(255,193,7,.1);
                color: #fff;
                transform: translateX(3px)
            }

                .nav a:hover::after {
                    width: 100%
                }

                .nav a:hover i {
                    transform: scale(1.2)
                }

            .nav a.active {
                background: rgba(255,193,7,.18);
                color: #fff;
                border-left-color: var(--yellow)
            }

        .sidebar-footer {
            background: #0c0d0f;
            color: #bbb;
            font-size: 12px;
            text-align: center;
            padding: 10px;
            border-top: 1px solid rgba(255,255,255,.08);
            position: sticky;
            bottom: 0
        }

        /* HEADER */
        .header {
            position: fixed;
            left: 260px;
            right: 0;
            top: 0;
            height: 72px;
            background: #fff;
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            z-index: 200
        }

        .toggle {
            display: none;
            font-size: 20px
        }

        .search {
            background: #eef1f4;
            border-radius: 26px;
            padding: 8px 12px;
            display: flex;
            align-items: center;
            gap: 10px
        }

            .search input {
                border: none;
                background: transparent;
                outline: none;
                width: 220px
            }

        .right {
            display: flex;
            align-items: center;
            gap: 16px
        }

        /* Profile dropdown (fade+slide) */
        .profile {
            position: relative;
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer
        }

            .profile img {
                width: 38px;
                height: 38px;
                border-radius: 50%;
                object-fit: cover
            }

        .dropdown {
            position: absolute;
            right: 0;
            top: 52px;
            background: #fff;
            border: 1px solid var(--border);
            border-radius: 12px;
            box-shadow: 0 12px 28px rgba(0,0,0,.12);
            min-width: 220px;
            opacity: 0;
            transform: translateY(-6px) scale(.98);
            pointer-events: none;
            transition: .2s;
            z-index: 300;
            overflow: hidden
        }

            .dropdown.show {
                opacity: 1;
                transform: translateY(0) scale(1);
                pointer-events: auto
            }

            .dropdown a {
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 12px 14px;
                color: #222;
                text-decoration: none;
                transition: .2s
            }

                .dropdown a i {
                    color: #111
                }

                .dropdown a:hover {
                    background: rgba(255,193,7,.12)
                }

        /* CONTENT & CARDS */
        .content {
            margin-left: 260px;
            padding: 100px 20px 40px
        }

        .card-lite {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 14px;
            box-shadow: 0 6px 18px rgba(0,0,0,.04)
        }

        .grid {
            display: grid;
            gap: 18px
        }

            .grid.stats {
                grid-template-columns: repeat(4,1fr)
            }

        /* Stat hover glow */
        .stat {
            padding: 18px;
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: transform .35s ease, box-shadow .35s ease, background .35s ease
        }

            .stat .icon {
                font-size: 24px;
                color: var(--yellow);
                margin-bottom: 6px;
                transition: transform .3s ease
            }

            .stat:hover {
                transform: translateY(-6px) scale(1.05);
                box-shadow: 0 12px 25px rgba(255,193,7,0.35);
                background: linear-gradient(145deg,#fff 0%,#fff8e1 100%)
            }

                .stat:hover .icon {
                    animation: pulseGlow 1.1s infinite alternate;
                    transform: scale(1.2)
                }

        @@keyframes pulseGlow {
            from {
                text-shadow: 0 0 6px rgba(255,193,7,0.3)
            }

            to {
                text-shadow: 0 0 14px rgba(255,193,7,0.8)
            }
        }

        .stat .title {
            font-size: 13px;
            color: var(--muted);
            margin-bottom: 6px
        }

        .stat .value {
            font-size: 34px;
            font-weight: 700;
            line-height: 1
        }

        .stat .blur {
            position: absolute;
            inset: auto -30px -30px auto;
            width: 120px;
            height: 120px;
            background: radial-gradient(rgba(255,193,7,.35),transparent 60%);
            filter: blur(8px)
        }

        /* Main layout */
        .grid.main {
            grid-template-columns: 2fr 1fr
        }

        /* Left column */
        #salesChart {
            height: 180px !important
        }

        .widget {
            padding: 16px
        }

        .mini {
            display: grid;
            grid-template-columns: repeat(3,1fr);
            gap: 18px
        }

        .kpi {
            padding: 14px
        }

            .kpi .big {
                font-size: 22px;
                font-weight: 600
            }

            .kpi .muted {
                color: var(--muted);
                font-size: 12px
            }

            .kpi .trend.up {
                color: #2ecc71
            }

            .kpi .trend.down {
                color: #e74c3c
            }

        /* Right column – refined widgets */
        .side {
            display: flex;
            flex-direction: column;
            gap: 18px
        }

        .widget-title {
            display: flex;
            align-items: center;
            justify-content: space-between
        }

            .widget-title h6 {
                font-weight: 600;
                margin: 0
            }

            .widget-title a {
                font-size: 12px;
                text-decoration: none;
                color: #6c757d
            }

        .user-list, .product-list {
            list-style: none;
            margin: 0;
            padding: 0
        }

        .user-item, .prod-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px dashed var(--border);
            transition: .2s
        }

            .user-item:last-child, .prod-item:last-child {
                border-bottom: 0
            }

        .user-left {
            display: flex;
            align-items: center;
            gap: 10px
        }

            .user-left img {
                width: 34px;
                height: 34px;
                border-radius: 50%;
                object-fit: cover
            }

        .user-item:hover, .prod-item:hover {
            background: linear-gradient(90deg, rgba(255,193,7,.08), transparent);
            border-radius: 8px
        }

        .dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #2ecc71;
            box-shadow: 0 0 0 3px rgba(46,204,113,.15)
        }

        .stock-badge {
            color: #dc3545;
            font-weight: 600
        }

        /* Enter animations */
        .reveal {
            opacity: 0;
            transform: translateY(8px);
            animation: reveal .45s ease forwards
        }

            .reveal.d2 {
                animation-delay: .08s
            }

            .reveal.d3 {
                animation-delay: .16s
            }

            .reveal.d4 {
                animation-delay: .24s
            }

        @@keyframes reveal {
            to {
                opacity: 1;
                transform: none
            }
        }

        /* Responsive */
        @@media(max - width:991px) {
            .sidebar {
                left: -260px;
                transition: .25s
            }

                .sidebar.open {
                    left: 0
                }

            .header {
                left: 0
            }

            .content {
                margin-left: 0
            }

            .toggle {
                display: inline-block
            }

            .grid.stats {
                grid-template-columns: 1fr 1fr
            }

            .grid.main {
                grid-template-columns: 1fr
            }
        }
    </style>
</head>
<body>

    <!-- SIDEBAR -->
    @await Component.InvokeAsync("_AdminLayoutSidebarComponentPartial") <!--Burası Bizim Area İçinde Admin Klasörü İçinde ViewComponent Klasörü içinde _AdminLayoutSidebarComponentPartial olarak tuttuk-->
    <!-- HEADER -->
    @await Component.InvokeAsync("_AdminLayoutHeaderComponentPartial") <!--Burası Bizim Area İçinde Admin Klasörü İçinde ViewComponent Klasörü içinde _AdminLayoutHeaderComponentPartial olarak tuttuk-->
    <!-- CONTENT -->
    <main class="content">

        <div class="mb-3">
            <h4 class="fw-semibold m-0">Hoş geldin Yunus 👋</h4>
            <div class="text-muted">Bugünün özetine hızlıca göz at.</div>
        </div>
        @RenderBody()
        <!-- Stats (animated counters) -->
       
        

    </main>

    <script>
        // profile dropdown (fade+slide) + click outside
        const btn = document.getElementById('profileBtn'), menu = document.getElementById('profileMenu');
        btn.addEventListener('click', () => menu.classList.toggle('show'));
        window.addEventListener('click', e => { if (!btn.contains(e.target)) menu.classList.remove('show'); });

        // animated counters
        document.querySelectorAll('.counter').forEach(el => {
            const to = parseFloat(el.dataset.to), isFloat = String(to).includes('.'); let cur = 0;
            const steps = 42, inc = to / steps;
            const t = setInterval(() => {
                cur += inc; el.textContent = isFloat ? cur.toFixed(1) : Math.floor(cur);
                if (cur >= to) { el.textContent = isFloat ? to.toFixed(1) : to; clearInterval(t); }
            }, 20);
        });

        // charts
        const ctx = document.getElementById('salesChart').getContext('2d');
        let grad = ctx.createLinearGradient(0, 0, 0, 400);
        grad.addColorStop(0, "rgba(255,193,7,0.9)"); grad.addColorStop(1, "rgba(255,193,7,0.2)");
        new Chart(ctx, {
            type: 'bar', data: {
                labels: ['Ocak', 'Şub', 'Mar', 'Nis', 'May', 'Haz'],
                datasets: [{ data: [120, 160, 190, 250, 220, 310], backgroundColor: grad, borderRadius: 7 }]
            },
            options: { plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true, grid: { color: '#eee' } }, x: { grid: { display: false } } } }
        });

        const vctx = document.getElementById('visitChart').getContext('2d');
        new Chart(vctx, {
            type: 'line', data: {
                labels: ['Pzt', 'Sal', 'Çar', 'Per', 'Cum', 'Cmt', 'Paz'],
                datasets: [{
                    data: [180, 210, 195, 230, 260, 240, 270], tension: .35, fill: true,
                    backgroundColor: 'rgba(255,193,7,.18)', borderColor: '#ffc107', pointRadius: 0, borderWidth: 2
                }]
            },
            options: { plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true, grid: { color: '#f0f0f0' } }, x: { grid: { display: false } } } }
        });

        // live clock
        const clock = document.getElementById('clock');
        const tick = () => { const d = new Date(); clock.textContent = d.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit', second: '2-digit' }); }
        tick(); setInterval(tick, 1000);
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
